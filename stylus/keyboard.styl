// 确定按钮
$dark-confirm-bg = #F80
$dark-confirm-color = #fff


/**
* 支付宝数字键盘亮色系
*/
// 键盘背景
$light-alipay-keyboard-bg = #d7d7d7
// 按键背景颜色
$light-alipay-presskey-bg = #f6f6f6
// 按键文字颜色
$light-alipay-color = #111
// 按键边框颜色
$light-alipay-border-color = #d7d7d7
// 确定按钮
$light-alipay-confirm-bg =  #4b8fda
$light-alipay-confirm-color = #fff


/**
* 支付宝数字键盘暗色系
*/
// 键盘背景
$dark-alipay-keyboard-bg = #000
// 按键背景颜色
$dark-alipay-presskey-bg = #333
// 按键文字颜色
$dark-alipay-color = #999
// 按键边框颜色
$dark-alipay-border-color = #000
// 确定按钮
$dark-alipay-confirm-bg = #F80
$dark-alipay-confirm-color = #fff




/**
* 微信数字键盘亮色系
*/
// 键盘背景
